<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_page_fragment_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
    <TextView android:id="@+id/single_page_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="16dp"
              android:paddingBottom="24dp"
              android:layout_centerHorizontal="true"
              android:text="@string/test_page" />
    <Button android:id="@+id/single_page_pagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/single_page_text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/SkyBlue"
    		android:textColor="@android:color/black"
            android:text="@string/page_smsr"/>
    <Button android:id="@+id/single_page_editbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_page_pagebutton"
        android:layout_marginTop="24dp"
        android:layout_alignParentLeft="true"
        android:text="@string/edit" />
    <Button android:id="@+id/single_page_deletebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_page_pagebutton"
        android:layout_marginTop="24dp"
        android:layout_alignParentRight="true"
        android:text="@string/delete" />
</RelativeLayout>